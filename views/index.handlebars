<div class="container" id="header">
  <div class="row">
    <div class=col-md-12>
      Eat Da Burgers!
    </div>
  </div>
</div>
<!-- CSS Animated Burger -->
<div class="container burger">
    <div class="face">
        <div class="rteye"></div>
        <div class="mouth"></div>
    </div>
    <div class="burger">
      <div class="bun"></div>
      <div class="onion"></div>
      <div class="tomato"></div>
      <div class="lettuce"></div>
      <div class="cheese">
        <div class="melt"></div>
        <div class="melt2"></div>
        <div class="down-arrow"></div>
      </div>
      <div class="ham"></div>
      <div class="bun2"></div>
    </div>
</div>
<div class="jumbotron add-bg">
<!-- Form for submitting a Burger -->
<div class="container" id="add-form">
  <div class="row">
    <div class="col-md-12">
      <h2>Add a Burger</h2>
        <form class="create-form">
          <div class="form-group">
            <label for="burger">Burger Name:</label>
            <!-- Field for submitting a Burger is required using browser validation -->
            <input type="text" id="burger" name="burger_name" placeholder="WhatABurger" required>
              <button type="submit">Add Burger</button>
          </div>
        </form>
    </div>
  </div>
</div>
<!-- Burgers waiting to be devoured section -->
<div class="container">
  <div class="row">
    <div class="col-md-6 burger-list">
      <h2>Burgers To Devour</h2>
      <ul>
        {{#each burgers}}
          {{#unless devoured}}
            {{> burgers/burger-block devoured=true}}
          {{/unless}}
        {{/each}}
      </ul>
    </div>
    <!-- Burgers already devoured section -->
    <div class="col-md-6 dev-burger-list">
      <h2>Burgers devoured!</h2>
      <ul>
        {{#each burgers}}
          {{#if devoured}}
            <li>
              {{id}}. &nbsp;{{burger_name}}
            </li>
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>
</div>

